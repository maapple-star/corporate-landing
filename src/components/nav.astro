---
import Logo from "../assets/logo.svg";
import LogoFull from "../assets/logo-full.png";
---

<nav
  class="fixed top-0 left-0 right-0 z-200 flex items-center justify-between h-[72px] px-[6%] bg-white border-b border-[#e2e8f0] shadow-[0_1px_20px_rgba(30,58,138,0.06)]"
>
  <div class="flex items-center gap-3">
    <img {...LogoFull} alt="Maple Star Computers LLC" />
    <span class="sr-only"> Maple Star Computers LLC </span>
  </div>
  <div class="flex items-center gap-8 max-[900px]:hidden">
    <a
      href="#about"
      class="text-[0.85rem] font-medium text-mid no-underline transition-colors duration-200 hover:text-blue2"
      >About</a
    >
    <a
      href="#solutions"
      class="text-[0.85rem] font-medium text-mid no-underline transition-colors duration-200 hover:text-blue2"
      >Solutions</a
    >
    <a
      href="#partners"
      class="text-[0.85rem] font-medium text-mid no-underline transition-colors duration-200 hover:text-blue2"
      >Partners</a
    >
    <a
      href="#contact"
      class="text-[0.85rem] font-medium text-mid no-underline transition-colors duration-200 hover:text-blue2"
      >Contact</a
    >
    <a
      href="#contact"
      class="bg-blue2 text-white px-6 py-[10px] font-dm text-[0.82rem] font-medium no-underline transition-colors duration-200 hover:bg-blue"
      >Get in Touch</a
    >
  </div>
</nav>
