---
interface Props {
  image: string;
  badge: string;
  headingLine1: string;
  headingLine2: string;
  headingLine3: string;
  description: string;
  primaryCta: { label: string; href: string };
  secondaryCta: { label: string; href: string };
}

const { image, badge, headingLine1, headingLine2, headingLine3, description, primaryCta, secondaryCta } = Astro.props;
---

<div class="h-slide min-w-full relative">
  <img
    class="w-full h-full object-cover brightness-[0.2] saturate-[0.4]"
    src={image}
    alt=""
  />
  <div class="absolute top-1/2 left-[6%] -translate-y-1/2 z-[3] max-w-[700px]">
    <div
      class="h-badge inline-flex items-center gap-2 border border-border2 px-4 py-[6px] mb-8 text-[0.65rem] tracking-[0.2em] uppercase text-cyan"
    >
      {badge}
    </div>
    <h1
      class="font-orbitron text-[clamp(2rem,5vw,4.5rem)] font-black leading-none text-white mb-6 uppercase tracking-[0.02em]"
    >
      <span class="text-cyan">{headingLine1}</span><br />{headingLine2}<br /><span class="text-green">{headingLine3}</span>
    </h1>
    <p class="text-[0.95rem] text-text leading-[1.8] max-w-[520px] mb-10">
      {description}
    </p>
    <div class="flex gap-4 flex-wrap">
      <a href={primaryCta.href} class="btn-cyber">{primaryCta.label}</a>
      <a href={secondaryCta.href} class="btn-ghost">{secondaryCta.label}</a>
    </div>
  </div>
</div>
