---
interface Props {
  image: string;
  imageClassName?: string;
  badge: string;
  headingLine1: string;
  headingLine2: string;
  headingLine3: string;
  accentLine?: number;
  description: string;
  primaryCta: { label: string; href: string };
  secondaryCta: { label: string; href: string };
}

const {
  image,
  badge,
  headingLine1,
  headingLine2,
  headingLine3,
  accentLine = 1,
  description,
  primaryCta,
  secondaryCta,
  imageClassName,
} = Astro.props;
---

<div class="h-slide min-w-full relative overflow-hidden">
  <img
    class={`w-full h-full object-cover brightness-[0.28] saturate-[0.6] ${imageClassName}`}
    src={image}
    alt=""
  />
  <!-- Diagonal accent -->
  <div
    class="absolute top-0 right-0 w-[45%] h-full bg-blue2 [clip-path:polygon(30%_0%,100%_0%,100%_100%,0%_100%)] opacity-[0.12] z-[1]"
  >
  </div>
  <div class="absolute top-1/2 left-[6%] -translate-y-1/2 z-3 max-w-[620px]">
    <div class="font-syne text-[0.7rem] text-blue3 tracking-[0.3em] mb-8">
      {badge}
    </div>
    <h1
      class="font-syne text-[clamp(2.2rem,4.5vw,3.75rem)] font-extrabold leading-[1.05] text-white mb-6"
    >
      {accentLine === 1 ? <span class="text-blue3">{headingLine1}</span> : headingLine1}<br />
      {accentLine === 2 ? <span class="text-blue3">{headingLine2}</span> : headingLine2}<br />
      {accentLine === 3 ? <span class="text-blue3">{headingLine3}</span> : headingLine3}
    </h1>
    <p class="text-[1rem] text-white/65 leading-[1.8] max-w-[500px] mb-10">
      {description}
    </p>
    <div class="flex gap-4 items-center flex-wrap">
      <a href={primaryCta.href} class="btn-primary">{primaryCta.label}</a>
      <a href={secondaryCta.href} class="btn-outline">{secondaryCta.label}</a>
    </div>
  </div>
</div>
