---
import ServiceCard from "./service-card.astro";
import { services } from "./service-data";
---

<!-- SERVICES -->
<section class="px-[6%] pb-[100px]" id="services">
  <div class="mb-10">
    <div class="label-tag">What We Offer</div>
    <h2
      class="font-syne text-[clamp(1.8rem,3.5vw,3rem)] font-extrabold text-dark leading-[1.1] mb-6"
    >
      Our <span class="text-blue2">Solutions</span>
    </h2>
  </div>
  <div class="grid gap-5 lg:grid-cols-3 md:grid-cols-2 grid-cols-1">
    {services.map((service) => <ServiceCard {...service} />)}
    <div
      class="svc-card bg-blue2 border border-blue2 overflow-hidden transition-[border-color,box-shadow] duration-300 flex flex-col justify-center p-10"
    >
      <div class="font-syne text-[1.2rem] font-bold text-white mb-3">
        Need a Custom Solution?
      </div>
      <p class="text-[0.82rem] text-white/75 leading-[1.7] mb-6">
        Our experts will design a tailored infrastructure plan for your specific requirements.
      </p>
      <a href="#contact" class="btn-outline inline-block w-fit"
        >Contact Us &rarr;</a
      >
    </div>
  </div>
</section>
