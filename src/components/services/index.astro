---
import ServiceCard from "./service-card.astro";
import { services } from "./service-data";
---

<!-- SERVICES -->
<section class="px-[5%] pb-[100px] relative z-1" id="services">
  <div class="mb-12">
    <div
      class="sec-eyebrow text-[0.65rem] tracking-[0.3em] uppercase text-cyan mb-[1.2rem] flex items-center gap-[10px]"
    >
      System.Solutions
    </div>
    <h2
      class="font-orbitron text-[clamp(1.6rem,3.5vw,3rem)] font-bold text-white leading-[1.1] uppercase mb-6 tracking-[0.02em]"
    >
      Our <span class="text-cyan">Solutions</span>
    </h2>
  </div>
  <div class="grid grid-cols-3 gap-4 max-[900px]:grid-cols-2">
    {services.map((service) => <ServiceCard {...service} />)}
    <div
      class="svc-card bg-panel2 border border-border overflow-hidden transition-[border-color,transform] duration-300 flex flex-col justify-center p-8"
    >
      <div class="text-[0.6rem] tracking-[0.2em] text-cyan uppercase mb-[6px]">Module_Custom</div>
      <div class="font-orbitron text-[1rem] font-bold uppercase text-cyan mb-2 tracking-[0.04em]">
        Custom Solution?
      </div>
      <p class="text-[0.8rem] text-text leading-[1.7] my-[10px] mb-5">
        Our experts design tailored infrastructure plans for your requirements.
      </p>
      <a href="#contact" class="btn-cyber" style="width:fit-content;font-size:0.6rem"
        >Init Contact</a
      >
    </div>
  </div>
</section>
