<!-- CONTACT FORM -->
<section class="px-[5%] pb-[100px] pt-[100px] relative z-[1]" id="contact">
  <!-- Corner bracket decorations -->
  <div
    class="absolute top-8 left-[4%] w-[50px] h-[50px] border-t border-l border-cyan pointer-events-none"
  >
  </div>
  <div
    class="absolute top-8 right-[4%] w-[50px] h-[50px] border-t border-r border-cyan-dim pointer-events-none"
  >
  </div>
  <div
    class="absolute bottom-8 left-[4%] w-[50px] h-[50px] border-b border-l border-cyan-dim pointer-events-none"
  >
  </div>
  <div
    class="absolute bottom-8 right-[4%] w-[50px] h-[50px] border-b border-r border-cyan pointer-events-none"
  >
  </div>

  <!-- Section header -->
  <div class="mb-14">
    <div
      class="sec-eyebrow text-[0.65rem] tracking-[0.3em] uppercase text-cyan mb-[1.2rem] flex items-center gap-[10px]"
    >
      Contact.Init
    </div>
    <h2
      class="font-orbitron text-[clamp(1.6rem,3.5vw,3rem)] font-bold text-white leading-[1.1] uppercase mb-4 tracking-[0.02em]"
    >
      Begin <span class="text-cyan">Transmission</span>
    </h2>
    <p class="text-[0.92rem] text-text leading-[1.8] max-w-[520px]">
      Our team of certified engineers is ready to architect your next-generation infrastructure.
    </p>
  </div>

  <!-- Scanline divider -->
  <div class="relative mb-14 h-px overflow-hidden">
    <div class="absolute inset-0 bg-linear-to-r from-transparent via-cyan/30 to-transparent"></div>
    <div
      class="absolute left-0 top-0 h-full w-1/3 bg-linear-to-r from-cyan/50 to-transparent animate-[scanPulse_3s_ease-in-out_infinite]"
    >
    </div>
  </div>

  <!-- Two-column layout -->
  <div class="grid grid-cols-[1fr_1.4fr] gap-[80px] max-[960px]:grid-cols-1 max-[960px]:gap-[60px]">
    <!-- LEFT: Contact info -->
    <div class="flex flex-col gap-8">
      <!-- Module label -->
      <div class="text-[0.6rem] tracking-[0.25em] uppercase text-cyan/60 font-orbitron">
        Protocol_01 // Direct Channel
      </div>

      <!-- Info blocks -->
      <div class="flex flex-col gap-[2px]">
        <div
          class="contact-info-block bg-panel border border-border p-5 relative group transition-[border-color] duration-300 hover:border-border2"
        >
          <div
            class="absolute top-0 left-0 w-0 h-[2px] bg-linear-to-r from-cyan to-transparent group-hover:w-full transition-[width] duration-500"
          >
          </div>
          <div class="text-[0.58rem] tracking-[0.28em] uppercase text-cyan/60 mb-2 font-orbitron">
            Location
          </div>
          <p class="text-[0.88rem] text-text-bright leading-[1.7]">
            Maple Star Computers LLC<br />
            United Arab Emirates
          </p>
        </div>

        <div
          class="contact-info-block bg-panel border border-border p-5 relative group transition-[border-color] duration-300 hover:border-border2"
        >
          <div
            class="absolute top-0 left-0 w-0 h-[2px] bg-linear-to-r from-cyan to-transparent group-hover:w-full transition-[width] duration-500"
          >
          </div>
          <div class="text-[0.58rem] tracking-[0.28em] uppercase text-cyan/60 mb-2 font-orbitron">
            Signal
          </div>
          <a
            href="mailto:info@maplestarcomputers.com"
            class="text-[0.88rem] text-text-bright leading-[1.7] hover:text-cyan transition-colors duration-200 block"
          >
            info@maplestarcomputers.com
          </a>
          <a
            href="tel:+971000000000"
            class="text-[0.88rem] text-text-bright leading-[1.7] hover:text-cyan transition-colors duration-200 block"
          >
            +971 XX XXX XXXX
          </a>
        </div>

        <div
          class="contact-info-block bg-panel border border-border p-5 relative group transition-[border-color] duration-300 hover:border-border2"
        >
          <div
            class="absolute top-0 left-0 w-0 h-[2px] bg-linear-to-r from-cyan to-transparent group-hover:w-full transition-[width] duration-500"
          >
          </div>
          <div class="text-[0.58rem] tracking-[0.28em] uppercase text-cyan/60 mb-2 font-orbitron">
            Response Protocol
          </div>
          <p class="text-[0.88rem] text-text leading-[1.7]">
            Average response within 24 hours.<br />
            Enterprise inquiries prioritized.
          </p>
        </div>
      </div>

      <!-- Capability tags -->
      <div>
        <div class="text-[0.58rem] tracking-[0.28em] uppercase text-cyan/60 mb-3 font-orbitron">
          Domains
        </div>
        <div class="flex flex-wrap gap-[6px]">
          <span
            class="text-[0.62rem] bg-panel2 text-cyan py-[3px] px-2 border border-border tracking-[0.06em]"
            >Hardware Infra</span
          >
          <span
            class="text-[0.62rem] bg-panel2 text-cyan py-[3px] px-2 border border-border tracking-[0.06em]"
            >Wireless</span
          >
          <span
            class="text-[0.62rem] bg-panel2 text-cyan py-[3px] px-2 border border-border tracking-[0.06em]"
            >Surveillance</span
          >
          <span
            class="text-[0.62rem] bg-panel2 text-cyan py-[3px] px-2 border border-border tracking-[0.06em]"
            >Disaster Recovery</span
          >
          <span
            class="text-[0.62rem] bg-panel2 text-cyan py-[3px] px-2 border border-border tracking-[0.06em]"
            >IP Telephony</span
          >
          <span
            class="text-[0.62rem] bg-panel2 text-green py-[3px] px-2 border border-green/20 tracking-[0.06em]"
            >Custom</span
          >
        </div>
      </div>

      <!-- Decorative status indicator -->
      <div class="flex items-center gap-3 mt-auto">
        <div class="w-2 h-2 rounded-full bg-green animate-[pulse_1.5s_ease_infinite]"></div>
        <span class="text-[0.65rem] tracking-[0.2em] uppercase text-green/70 font-orbitron"
          >Systems Online â€” Accepting Requests</span
        >
      </div>
    </div>

    <!-- RIGHT: Form -->
    <div class="relative">
      <!-- Module label -->
      <div class="text-[0.6rem] tracking-[0.25em] uppercase text-cyan/60 font-orbitron mb-6">
        Protocol_02 // Request Uplink
      </div>

      <!-- Form panel -->
      <div class="bg-panel border border-border relative" id="contactFormPanel">
        <!-- Top accent bar -->
        <div class="h-[2px] bg-linear-to-r from-cyan via-cyan/40 to-transparent"></div>

        <form id="contactForm" class="p-8 flex flex-col gap-6" novalidate>
          <!-- Row 1: Name + Company -->
          <div class="grid grid-cols-2 gap-4 max-[600px]:grid-cols-1">
            <div class="form-field-wrap">
              <label class="form-label" for="cf-name"
                >Full Name <span class="text-cyan">*</span></label
              >
              <input
                id="cf-name"
                name="name"
                type="text"
                required
                placeholder="John Smith"
                class="form-input"
              />
            </div>
            <div class="form-field-wrap">
              <label class="form-label" for="cf-company">Company</label>
              <input
                id="cf-company"
                name="company"
                type="text"
                placeholder="Acme Corp"
                class="form-input"
              />
            </div>
          </div>

          <!-- Row 2: Email + Phone -->
          <div class="grid grid-cols-2 gap-4 max-[600px]:grid-cols-1">
            <div class="form-field-wrap">
              <label class="form-label" for="cf-email">Email <span class="text-cyan">*</span></label
              >
              <input
                id="cf-email"
                name="email"
                type="email"
                required
                placeholder="you@company.com"
                class="form-input"
              />
            </div>
            <div class="form-field-wrap">
              <label class="form-label" for="cf-phone"
                >Phone <span class="text-text/30">optional</span></label
              >
              <input
                id="cf-phone"
                name="phone"
                type="tel"
                placeholder="+971 XX XXX XXXX"
                class="form-input"
              />
            </div>
          </div>

          <!-- Service Interest -->
          <div class="form-field-wrap">
            <label class="form-label" for="cf-service"
              >Service Interest <span class="text-cyan">*</span></label
            >
            <div class="relative">
              <select
                id="cf-service"
                name="service"
                required
                class="form-input form-select appearance-none w-full pr-10"
              >
                <option value="" disabled selected>Select module...</option>
                <option value="hardware">Hardware Infra</option>
                <option value="wireless">Wireless Solutions</option>
                <option value="surveillance">Surveillance &amp; Access</option>
                <option value="recovery">Disaster Recovery</option>
                <option value="telephony">IP Telephony</option>
                <option value="custom">Custom Solution</option>
              </select>
              <!-- Custom chevron -->
              <div
                class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 text-cyan/60"
              >
                <svg width="10" height="6" viewBox="0 0 10 6" fill="none">
                  <path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5"></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Message -->
          <div class="form-field-wrap">
            <label class="form-label" for="cf-message"
              >Message <span class="text-cyan">*</span></label
            >
            <textarea
              id="cf-message"
              name="message"
              required
              rows="5"
              placeholder="Describe your infrastructure requirements..."
              class="form-input resize-none"></textarea>
          </div>

          <!-- Error msg -->
          <div
            id="cfError"
            class="hidden text-[0.78rem] text-red-400/80 tracking-[0.05em] font-exo"
          >
            Please fill in all required fields before transmitting.
          </div>

          <!-- Submit -->
          <div class="flex items-center justify-between gap-4 flex-wrap">
            <span class="text-[0.62rem] tracking-[0.15em] text-text/30 font-orbitron"
              >AES-256 // ENCRYPTED</span
            >
            <button type="submit" class="btn-cyber" id="cfSubmit">
              <span id="cfBtnText">Transmit Request</span>
              <svg
                id="cfBtnIcon"
                width="14"
                height="14"
                viewBox="0 0 14 14"
                fill="none"
                style="flex-shrink:0"
              >
                <path
                  d="M1 7H13M13 7L8 2M13 7L8 12"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="square"></path>
              </svg>
            </button>
          </div>
        </form>
      </div>

      <!-- Success state (hidden initially) -->
      <div
        id="cfSuccess"
        class="hidden absolute inset-0 bg-panel border border-green/30 flex flex-col items-center justify-center text-center p-12"
      >
        <div
          class="h-[2px] absolute top-0 left-0 right-0 bg-linear-to-r from-transparent via-green to-transparent"
        >
        </div>
        <div class="w-16 h-16 border border-green/40 flex items-center justify-center mb-6">
          <svg width="28" height="20" viewBox="0 0 28 20" fill="none">
            <path d="M2 10L10 18L26 2" stroke="#00ff88" stroke-width="2" stroke-linecap="square"
            ></path>
          </svg>
        </div>
        <div
          class="font-orbitron text-[1.1rem] font-bold text-white uppercase tracking-[0.08em] mb-3"
        >
          Transmission Received
        </div>
        <p class="text-[0.88rem] text-text leading-[1.8] max-w-[340px]">
          Your request has been logged. A Maple Star engineer will respond within 24 hours.
        </p>
        <div class="mt-8 flex items-center gap-2">
          <div class="w-1.5 h-1.5 rounded-full bg-green animate-[pulse_1.5s_ease_infinite]"></div>
          <span class="text-[0.6rem] tracking-[0.25em] uppercase text-green/60 font-orbitron"
            >Signal Confirmed</span
          >
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .form-label {
    display: block;
    font-family: var(--font-orbitron);
    font-size: 0.6rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: rgba(160, 184, 216, 0.55);
    margin-bottom: 8px;
  }

  .form-input {
    width: 100%;
    background: var(--color-panel2);
    border: 1px solid var(--color-border);
    color: var(--color-text-bright);
    padding: 11px 14px;
    font-family: var(--font-exo);
    font-size: 0.88rem;
    outline: none;
    border-radius: 0;
    transition:
      border-color 0.2s,
      box-shadow 0.2s;
  }

  .form-input::placeholder {
    color: rgba(160, 184, 216, 0.25);
  }

  .form-input:focus {
    border-color: var(--color-cyan);
    box-shadow:
      0 0 0 1px rgba(0, 212, 255, 0.12),
      inset 0 0 12px rgba(0, 212, 255, 0.04);
  }

  .form-input:focus-visible {
    outline: none;
  }

  .form-select option {
    background: var(--color-panel2);
    color: var(--color-text-bright);
  }

  @keyframes scanPulse {
    0%,
    100% {
      transform: translateX(-100%);
      opacity: 0.3;
    }
    50% {
      transform: translateX(200%);
      opacity: 1;
    }
  }
</style>

<script>
  const form = document.getElementById("contactForm") as HTMLFormElement;
  const success = document.getElementById("cfSuccess") as HTMLElement;
  const panel = document.getElementById("contactFormPanel") as HTMLElement;
  const errMsg = document.getElementById("cfError") as HTMLElement;
  const btnText = document.getElementById("cfBtnText") as HTMLElement;
  const btnIcon = document.getElementById("cfBtnIcon") as HTMLElement;

  form.addEventListener("submit", (e) => {
    e.preventDefault();

    const name = (form.elements.namedItem("name") as HTMLInputElement).value.trim();
    const email = (form.elements.namedItem("email") as HTMLInputElement).value.trim();
    const service = (form.elements.namedItem("service") as HTMLSelectElement).value;
    const message = (form.elements.namedItem("message") as HTMLTextAreaElement).value.trim();

    if (!name || !email || !service || !message) {
      errMsg.classList.remove("hidden");
      return;
    }

    errMsg.classList.add("hidden");

    // Simulate sending
    btnText.textContent = "Transmitting...";
    btnIcon.style.opacity = "0.4";

    setTimeout(() => {
      panel.style.position = "relative";
      success.classList.remove("hidden");
      success.style.display = "flex";
    }, 900);
  });

  // Hide error on input
  form.addEventListener("input", () => {
    errMsg.classList.add("hidden");
  });
</script>
