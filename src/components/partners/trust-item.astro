---
interface Props {
  label: string;
  description: string;
}

const { label, description } = Astro.props;
---

<div class="text-center">
  <div
    class="size-12 bg-blue-light border border-[#e2e8f0] flex items-center justify-center mx-auto mb-4"
  >
    <slot name="icon" />
  </div>
  <div class="font-syne text-base font-bold text-dark mb-2">{label}</div>
  <p class="text-[0.8rem] text-mid leading-[1.7]">{description}</p>
</div>
