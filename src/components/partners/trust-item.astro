---
interface Props {
  label: string;
  description: string;
}

const { label, description } = Astro.props;
---

<div class="text-center">
  <div class="w-12 h-12 bg-[rgba(0,212,255,0.08)] border border-border flex items-center justify-center mx-auto mb-4">
    <slot name="icon" />
  </div>
  <div class="font-orbitron text-[0.85rem] font-bold uppercase text-white mb-2 tracking-[0.05em]">{label}</div>
  <p class="text-[0.8rem] text-text leading-[1.7]">{description}</p>
</div>
