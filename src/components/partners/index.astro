<style>
  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  .partners-marquee {
    animation: marquee 25s linear infinite;
  }

  .partners-marquee:hover {
    animation-play-state: paused;
  }
</style>

<!-- PARTNERS -->
<section id="partners" class="py-[100px] px-[6%] bg-off">
  <header class="mb-16 text-center">
    <div class="label-tag" style="margin:0 auto 1.5rem;display:table">Our Partners</div>
    <h2
      class="font-syne text-[clamp(1.8rem,3.5vw,3rem)] font-extrabold text-dark leading-[1.1] mb-6"
    >
      Strategic Technology <span class="text-blue2">Partners</span>
    </h2>
    <p class="text-mid text-[0.95rem] leading-[1.8] max-w-2xl mx-auto">
      We work directly with leading technology manufacturers to bring you the best hardware at
      competitive prices. Our partnerships ensure quality, availability, and expert support.
    </p>
  </header>

  <!-- Partner Logo Marquee -->
  <div class="overflow-hidden relative mb-16">
    <div
      class="absolute inset-y-0 left-0 w-32 bg-linear-to-r from-off to-transparent z-10 pointer-events-none"
    >
    </div>
    <div
      class="absolute inset-y-0 right-0 w-32 bg-linear-to-l from-off to-transparent z-10 pointer-events-none"
    >
    </div>

    <div class="flex gap-6 w-max partners-marquee">
      {
        [...partners, ...partners, ...partners].map((partner) => (
          <div class="w-40 shrink-0">
            <PartnerCard
              name={partner.name}
              svgPath={partner.svgPath}
              fillRule={partner.fillRule}
              clipRule={partner.clipRule}
            />
          </div>
        ))
      }
    </div>
  </div>

  <!-- Trust Indicators -->
  <div class="grid grid-cols-3 gap-8 max-[900px]:grid-cols-1 border-t border-[#e2e8f0] pt-16">
    {
      trustItems.map((item) => (
        <TrustItem label={item.label} description={item.description}>
          <Fragment slot="icon" set:html={item.icon} />
        </TrustItem>
      ))
    }
  </div>
</section>
