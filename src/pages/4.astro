<script>
  const track = document.getElementById('hTrack');
  const inds = document.querySelectorAll('.h-ind');
  const slides = document.querySelectorAll('.h-slide');
  let cur = 0;
  const total = 3;

  function go(n) {
    slides[cur].classList.remove('active');
    cur = (n + total) % total;
    track.style.transform = `translateX(-${cur * 100}%)`;
    slides[cur].classList.add('active');
    inds.forEach((d,i) => d.classList.toggle('active', i === cur));
  }

  inds.forEach(d => d.addEventListener('click', () => go(+d.dataset.i)));
  let t = setInterval(() => go(cur + 1), 5500);
  track.addEventListener('mouseenter', () => clearInterval(t));
  track.addEventListener('mouseleave', () => { t = setInterval(() => go(cur + 1), 5500); });
</script>
