  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    :root {
      --sand: #C4964A;
      --sand-light: #DDB96B;
      --sand-pale: #F7EDD8;
      --sand-deep: #8B6320;
      --brown: #2C1810;
      --brown2: #3D2415;
      --brown3: #5C3820;
      --cream: #FAF6EE;
      --cream2: #F0E8D8;
      --text: #2C1810;
      --text-mid: #6B5040;
      --white: #FFFFFF;
    }
    html { scroll-behavior: smooth; }
    body { background: var(--cream); color: var(--text); font-family: 'Source Sans 3', sans-serif; overflow-x: hidden; }

    /* Grain overlay */
    body::before {
      content: '';
      position: fixed; inset: 0; z-index: 999;
      pointer-events: none;
      opacity: 0.025;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    }

    /* NAV */
    nav {
      position: fixed; top: 0; left: 0; right: 0; z-index: 100;
      height: 76px;
      display: flex; align-items: center; justify-content: space-between;
      padding: 0 6%;
      background: rgba(250,246,238,0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(196,150,74,0.2);
    }
    .n-logo {
      display: flex; flex-direction: column;
    }
    .n-logo .n-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.15rem; font-weight: 600; color: var(--brown);
      letter-spacing: 0.04em;
    }
    .n-logo .n-sub {
      font-size: 0.58rem; color: var(--sand); letter-spacing: 0.25em;
      text-transform: uppercase; margin-top: 2px;
    }
    .n-links { display: flex; gap: 2.5rem; }
    .n-links a {
      font-size: 0.82rem; color: var(--text-mid); text-decoration: none;
      letter-spacing: 0.04em; transition: color 0.2s;
    }
    .n-links a:hover { color: var(--sand); }
    .n-btn {
      background: var(--sand); color: white;
      padding: 10px 26px;
      font-family: 'Source Sans 3', sans-serif;
      font-size: 0.8rem; font-weight: 500;
      text-decoration: none; transition: background 0.2s;
      letter-spacing: 0.05em;
    }
    .n-btn:hover { background: var(--sand-deep); }

    /* HERO */
    .hero { margin-top: 76px; position: relative; height: calc(100vh - 76px); overflow: hidden; }
    .h-track { display: flex; height: 100%; transition: transform 1s cubic-bezier(0.77,0,0.175,1); }
    .h-slide { min-width: 100%; position: relative; }
    .h-img {
      width: 100%; height: 100%; object-fit: cover;
      filter: brightness(0.45) saturate(0.7);
      transition: transform 8s ease;
    }
    .h-slide.active .h-img { transform: scale(1.04); }
    /* Warm overlay */
    .h-slide::after {
      content: '';
      position: absolute; inset: 0;
      background: linear-gradient(to right, rgba(44,24,16,0.8) 0%, rgba(44,24,16,0.1) 60%, transparent 100%);
    }
    .h-content {
      position: absolute; top: 50%; left: 6%; transform: translateY(-50%);
      z-index: 2; max-width: 600px;
    }
    .h-ornament {
      font-family: 'Cormorant Garamond', serif;
      font-size: 0.7rem; letter-spacing: 0.4em; text-transform: uppercase;
      color: var(--sand-light); margin-bottom: 1.5rem;
      display: flex; align-items: center; gap: 16px;
    }
    .h-ornament::before, .h-ornament::after {
      content: ''; flex: 0 0 30px; height: 1px; background: var(--sand);
    }
    .h-title {
      font-family: 'Cormorant Garamond', serif;
      font-size: clamp(2.8rem, 5.5vw, 5rem); font-weight: 600;
      line-height: 1.05; color: var(--cream);
      margin-bottom: 1.5rem;
    }
    .h-title em { color: var(--sand-light); font-style: italic; }
    .h-desc {
      font-size: 1rem; color: rgba(250,246,238,0.65);
      line-height: 1.85; max-width: 500px; margin-bottom: 2.5rem;
    }
    .h-cta {
      display: inline-flex; align-items: center; gap: 14px;
      background: transparent; border: 1px solid var(--sand);
      color: var(--cream); padding: 14px 32px;
      font-size: 0.8rem; letter-spacing: 0.12em; text-transform: uppercase;
      text-decoration: none; transition: all 0.3s;
    }
    .h-cta:hover { background: var(--sand); }

    /* Slide indicators */
    .h-indicators {
      position: absolute; bottom: 40px; left: 50%; transform: translateX(-50%);
      display: flex; gap: 12px; z-index: 3;
    }
    .h-ind {
      width: 36px; height: 1px; background: rgba(250,246,238,0.3);
      cursor: pointer; transition: all 0.4s;
    }
    .h-ind.active { background: var(--sand-light); width: 60px; }

    /* Scroll cue */
    .scroll-cue {
      position: absolute; bottom: 36px; right: 6%; z-index: 3;
      writing-mode: vertical-rl;
      font-size: 0.65rem; letter-spacing: 0.25em; text-transform: uppercase;
      color: rgba(250,246,238,0.4);
      display: flex; align-items: center; gap: 10px;
    }
    .scroll-cue::before {
      content: ''; width: 1px; height: 40px; background: rgba(250,246,238,0.3);
    }

    /* Ornamental divider */
    .ornament { text-align: center; color: var(--sand); font-size: 1.5rem; margin: 0; padding: 40px 0; }

    /* ABOUT */
    .about { padding: 100px 6%; }
    .about-wrap { display: grid; grid-template-columns: 1fr 1fr; gap: 100px; align-items: center; }
    .label {
      font-family: 'Cormorant Garamond', serif;
      font-size: 0.7rem; letter-spacing: 0.4em; text-transform: uppercase;
      color: var(--sand); margin-bottom: 1.2rem;
    }
    .sec-h2 {
      font-family: 'Cormorant Garamond', serif;
      font-size: clamp(2rem, 4vw, 3.5rem); font-weight: 600;
      line-height: 1.1; color: var(--brown); margin-bottom: 1.5rem;
    }
    .sec-h2 em { font-style: italic; color: var(--sand); }
    .sec-p { font-size: 0.95rem; color: var(--text-mid); line-height: 1.9; margin-bottom: 1rem; }
    .about-img-col { position: relative; }
    .about-img { width: 100%; aspect-ratio: 3/4; object-fit: cover; filter: saturate(0.85); }
    .img-caption {
      position: absolute; bottom: 0; right: 0;
      background: var(--sand); color: white;
      padding: 20px 24px;
      font-family: 'Cormorant Garamond', serif; font-size: 0.8rem;
      letter-spacing: 0.15em; text-transform: uppercase;
    }
    .img-frame {
      position: absolute; top: -16px; left: -16px; right: 16px; bottom: 16px;
      border: 1px solid rgba(196,150,74,0.25); z-index: -1;
    }

    /* METRICS BAR */
    .metrics-bar {
      background: var(--brown); padding: 60px 6%;
      display: grid; grid-template-columns: repeat(4,1fr);
    }
    .mb-item {
      padding: 0 40px;
      border-right: 1px solid rgba(196,150,74,0.2);
      text-align: center;
    }
    .mb-item:last-child { border-right: none; }
    .mb-num {
      font-family: 'Cormorant Garamond', serif;
      font-size: 3rem; font-weight: 600; color: var(--sand-light); line-height: 1;
    }
    .mb-lbl { font-size: 0.75rem; color: rgba(250,246,238,0.45); margin-top: 8px; letter-spacing: 0.1em; }

    /* ETE */
    .ete { padding: 100px 6%; background: var(--cream2); }
    .ete-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 80px; align-items: center; margin-top: 60px; }
    .ete-img { width: 100%; aspect-ratio: 16/10; object-fit: cover; filter: saturate(0.8); }
    .ete-lead {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.4rem; font-style: italic; color: var(--sand);
      margin-bottom: 1.5rem; line-height: 1.4;
    }
    .ul-ornate { list-style: none; margin-top: 20px; display: flex; flex-direction: column; gap: 14px; }
    .ul-ornate li {
      display: flex; align-items: flex-start; gap: 14px;
      font-size: 0.9rem; color: var(--text-mid); line-height: 1.6;
    }
    .ul-ornate li::before {
      content: '◆'; color: var(--sand); font-size: 0.5rem; margin-top: 5px; flex-shrink: 0;
    }

    /* ICT */
    .ict {
      background: var(--sand-pale); padding: 80px 6%;
      border-top: 1px solid rgba(196,150,74,0.2);
      border-bottom: 1px solid rgba(196,150,74,0.2);
    }
    .ict-inner { max-width: 860px; margin: 0 auto; text-align: center; }
    .ict-quote {
      font-family: 'Cormorant Garamond', serif;
      font-size: clamp(1.3rem, 2.5vw, 1.8rem); font-style: italic;
      color: var(--brown3); line-height: 1.6;
    }
    .ict-attr {
      margin-top: 24px; font-size: 0.75rem;
      letter-spacing: 0.2em; text-transform: uppercase; color: var(--sand);
    }

    /* WHY */
    .why { padding: 100px 6%; }
    .why-banner {
      width: 100%; height: 480px; object-fit: cover;
      filter: saturate(0.7) brightness(0.85);
      margin-bottom: 80px;
    }
    .why-header { max-width: 680px; margin: 0 auto 80px; text-align: center; }
    .why-desc { font-size: 1rem; color: var(--text-mid); line-height: 1.9; }

    /* VALUES */
    .vals { padding: 0 6% 100px; }
    .vals-grid { display: grid; grid-template-columns: repeat(4,1fr); gap: 0; }
    .val {
      padding: 48px 32px;
      border: 1px solid rgba(196,150,74,0.15);
      border-right: none; transition: background 0.3s;
    }
    .vals-grid .val:last-child { border-right: 1px solid rgba(196,150,74,0.15); }
    .val:hover { background: var(--sand-pale); }
    .val-sym {
      font-family: 'Cormorant Garamond', serif;
      font-size: 2rem; color: var(--sand); margin-bottom: 1rem; display: block;
    }
    .val-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.3rem; font-weight: 600; color: var(--brown);
      margin-bottom: 0.75rem;
    }
    .val-text { font-size: 0.85rem; color: var(--text-mid); line-height: 1.8; }

    /* SERVICES */
    .services { padding: 0 6% 100px; }
    .svc-hd { margin-bottom: 48px; }
    .svc-grid { display: grid; grid-template-columns: repeat(3,1fr); gap: 24px; }
    .svc-card {
      overflow: hidden; background: var(--cream2);
      border: 1px solid rgba(196,150,74,0.12);
      transition: box-shadow 0.3s, transform 0.3s;
    }
    .svc-card:hover { box-shadow: 0 12px 40px rgba(44,24,16,0.1); transform: translateY(-4px); }
    .svc-img { width: 100%; height: 200px; object-fit: cover; filter: saturate(0.75); display: block; transition: filter 0.4s; }
    .svc-card:hover .svc-img { filter: saturate(1); }
    .svc-body { padding: 24px; }
    .svc-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.15rem; font-weight: 600; color: var(--brown); margin-bottom: 0.5rem;
    }
    .svc-text { font-size: 0.83rem; color: var(--text-mid); line-height: 1.75; }
    .svc-tags { margin-top: 12px; display: flex; flex-wrap: wrap; gap: 6px; }
    .svc-tag {
      font-size: 0.68rem; background: var(--sand-pale);
      color: var(--sand-deep); padding: 3px 10px;
      border: 1px solid rgba(196,150,74,0.3);
    }

    /* FOOTER */
    footer { background: var(--brown); color: var(--cream); padding: 80px 6% 40px; }
    .ft-grid {
      display: grid; grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 60px; margin-bottom: 60px;
    }
    .ft-brand .name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.2rem; font-weight: 600; color: var(--sand-light);
      margin-bottom: 0.75rem;
    }
    .ft-brand .line { width: 40px; height: 1px; background: var(--sand); margin-bottom: 1rem; }
    .ft-brand p { font-size: 0.85rem; color: rgba(250,246,238,0.45); line-height: 1.8; max-width: 260px; }
    .ft-ct {
      font-size: 0.62rem; letter-spacing: 0.3em; text-transform: uppercase;
      color: var(--sand); margin-bottom: 1.5rem;
    }
    .ft-ul { list-style: none; display: flex; flex-direction: column; gap: 10px; }
    .ft-ul a { font-size: 0.85rem; color: rgba(250,246,238,0.4); text-decoration: none; transition: color 0.2s; }
    .ft-ul a:hover { color: var(--sand-light); }
    .ft-addr { font-size: 0.85rem; color: rgba(250,246,238,0.4); line-height: 1.8; }
    .ft-bottom {
      border-top: 1px solid rgba(196,150,74,0.15); padding-top: 28px;
      display: flex; justify-content: space-between;
      font-size: 0.75rem; color: rgba(250,246,238,0.2);
    }

    @media (max-width: 900px) {
      .about-wrap, .ete-grid { grid-template-columns: 1fr; }
      .metrics-bar { grid-template-columns: repeat(2,1fr); }
      .vals-grid { grid-template-columns: 1fr 1fr; }
      .svc-grid { grid-template-columns: 1fr 1fr; }
      .ft-grid { grid-template-columns: 1fr 1fr; }
      .n-links, .n-btn { display: none; }
    }
  </style>
</head>
