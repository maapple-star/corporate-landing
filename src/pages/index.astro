    <script>
      const slides = document.getElementById("hSlides");
      const ctrls = document.querySelectorAll(".h-ctrl");
      const numEl = document.getElementById("hNum");
      const fill = document.getElementById("sFill");
      let cur = 0;
      const total = 3;

      function go(n) {
        cur = (n + total) % total;
        slides.style.transform = `translateX(-${cur * 100}%)`;
        ctrls.forEach((c, i) => c.classList.toggle("active", i === cur));
        numEl.textContent = String(cur + 1).padStart(2, "0");
        fill.style.animation = "none";
        fill.offsetHeight;
        fill.style.animation = "statusFill 5s linear infinite";
      }

      ctrls.forEach((c) => c.addEventListener("click", () => go(+c.dataset.i)));
      let t = setInterval(() => go(cur + 1), 5000);
      slides.addEventListener("mouseenter", () => clearInterval(t));
      slides.addEventListener("mouseleave", () => {
        t = setInterval(() => go(cur + 1), 5000);
      });
    </script>
