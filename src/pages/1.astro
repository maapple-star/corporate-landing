  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    :root {
      --navy: #070D1A;
      --navy2: #0D1629;
      --navy3: #1A2540;
      --gold: #C9A84C;
      --gold-light: #E2C97E;
      --gold-dim: #6D5A28;
      --cream: #F5F0E8;
      --white: #FFFFFF;
      --gray: #8A9BBD;
      --gray-light: #E8EDF7;
    }
    html { scroll-behavior: smooth; }
    body { background: var(--navy); color: var(--cream); font-family: 'Outfit', sans-serif; overflow-x: hidden; }

    /* NAV */
    nav {
      position: fixed; top: 0; left: 0; right: 0; z-index: 100;
      display: flex; align-items: center; justify-content: space-between;
      padding: 0 5%;
      height: 80px;
      background: rgba(7,13,26,0.92);
      backdrop-filter: blur(16px);
      border-bottom: 1px solid rgba(201,168,76,0.2);
      transition: all 0.3s ease;
    }
    .nav-logo {
      display: flex; flex-direction: column; line-height: 1;
    }
    .nav-logo .name {
      font-family: 'Playfair Display', serif;
      font-size: 1.1rem; font-weight: 700;
      color: var(--gold);
      letter-spacing: 0.05em;
    }
    .nav-logo .tagline {
      font-size: 0.6rem; color: var(--gray);
      letter-spacing: 0.2em; text-transform: uppercase; margin-top: 2px;
    }
    .nav-links { display: flex; gap: 2.5rem; list-style: none; }
    .nav-links a {
      font-size: 0.8rem; font-weight: 500; letter-spacing: 0.15em;
      text-transform: uppercase; color: var(--gray);
      text-decoration: none; transition: color 0.3s;
      position: relative;
    }
    .nav-links a::after {
      content: ''; position: absolute; bottom: -4px; left: 0; right: 0;
      height: 1px; background: var(--gold); transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    .nav-links a:hover { color: var(--gold-light); }
    .nav-links a:hover::after { transform: scaleX(1); }
    .nav-cta {
      background: transparent; border: 1px solid var(--gold);
      color: var(--gold); padding: 8px 22px;
      font-family: 'Outfit', sans-serif; font-size: 0.75rem;
      letter-spacing: 0.15em; text-transform: uppercase;
      cursor: pointer; transition: all 0.3s; text-decoration: none;
    }
    .nav-cta:hover { background: var(--gold); color: var(--navy); }

    /* HERO CAROUSEL */
    .hero {
      position: relative; height: 100vh; overflow: hidden;
    }
    .carousel-track {
      display: flex; height: 100%;
      transition: transform 0.9s cubic-bezier(0.77,0,0.18,1);
    }
    .slide {
      min-width: 100%; height: 100%; position: relative; flex-shrink: 0;
    }
    .slide-img {
      width: 100%; height: 100%; object-fit: cover;
      filter: brightness(0.35) saturate(0.8);
    }
    .slide-overlay {
      position: absolute; inset: 0;
      background: linear-gradient(135deg, rgba(7,13,26,0.85) 0%, rgba(7,13,26,0.3) 60%, transparent 100%);
    }
    .slide-content {
      position: absolute; top: 50%; left: 10%; transform: translateY(-50%);
      max-width: 680px;
    }
    .slide-eyebrow {
      font-size: 0.7rem; letter-spacing: 0.3em; text-transform: uppercase;
      color: var(--gold); margin-bottom: 1.5rem;
      display: flex; align-items: center; gap: 1rem;
    }
    .slide-eyebrow::before {
      content: ''; display: block; width: 40px; height: 1px; background: var(--gold);
    }
    .slide-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2.5rem, 5vw, 4.5rem);
      font-weight: 700; line-height: 1.1;
      color: var(--white);
      margin-bottom: 1.5rem;
    }
    .slide-title em { color: var(--gold); font-style: normal; }
    .slide-desc {
      font-size: 1rem; color: rgba(245,240,232,0.75);
      line-height: 1.8; max-width: 520px; margin-bottom: 2.5rem;
    }
    .slide-btn {
      display: inline-flex; align-items: center; gap: 12px;
      background: var(--gold); color: var(--navy);
      padding: 14px 32px;
      font-family: 'Outfit', sans-serif; font-size: 0.8rem;
      font-weight: 600; letter-spacing: 0.15em; text-transform: uppercase;
      text-decoration: none; transition: all 0.3s;
    }
    .slide-btn:hover { background: var(--gold-light); transform: translateX(4px); }
    .carousel-controls {
      position: absolute; bottom: 48px; left: 10%;
      display: flex; align-items: center; gap: 16px;
    }
    .carousel-dot {
      width: 24px; height: 2px; background: rgba(201,168,76,0.3);
      cursor: pointer; transition: all 0.3s;
    }
    .carousel-dot.active { background: var(--gold); width: 48px; }
    .carousel-counter {
      position: absolute; bottom: 48px; right: 10%;
      font-size: 0.7rem; color: var(--gray); letter-spacing: 0.1em;
    }
    .carousel-arrows {
      position: absolute; right: 5%; top: 50%; transform: translateY(-50%);
      display: flex; flex-direction: column; gap: 12px;
    }
    .carousel-arrow {
      width: 44px; height: 44px; border: 1px solid rgba(201,168,76,0.4);
      background: transparent; color: var(--gold);
      cursor: pointer; font-size: 1rem; transition: all 0.3s;
      display: flex; align-items: center; justify-content: center;
    }
    .carousel-arrow:hover { background: var(--gold); color: var(--navy); }

    /* DIVIDER */
    .gold-divider {
      width: 80px; height: 2px;
      background: linear-gradient(90deg, var(--gold), transparent);
      margin-bottom: 1.5rem;
    }

    /* ABOUT SECTION */
    .about-section {
      padding: 120px 5%;
      display: grid; grid-template-columns: 1fr 1fr; gap: 80px;
      align-items: center;
    }
    .section-label {
      font-size: 0.65rem; letter-spacing: 0.35em; text-transform: uppercase;
      color: var(--gold); margin-bottom: 1rem;
    }
    .section-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2rem, 4vw, 3.5rem);
      font-weight: 700; line-height: 1.15;
      color: var(--white); margin-bottom: 2rem;
    }
    .section-title span { color: var(--gold); }
    .section-text {
      font-size: 1rem; line-height: 1.9;
      color: rgba(245,240,232,0.7);
      margin-bottom: 1.5rem;
    }
    .about-img-wrap {
      position: relative;
    }
    .about-img-wrap img {
      width: 100%; aspect-ratio: 4/3; object-fit: cover;
      filter: brightness(0.8) saturate(0.9);
    }
    .about-img-wrap::before {
      content: ''; position: absolute;
      top: -20px; left: -20px; right: 20px; bottom: 20px;
      border: 1px solid rgba(201,168,76,0.3);
      z-index: -1;
    }
    .about-img-wrap::after {
      content: 'EST. 2024';
      position: absolute; bottom: -16px; right: -16px;
      background: var(--gold); color: var(--navy);
      padding: 8px 20px;
      font-size: 0.65rem; letter-spacing: 0.25em; font-weight: 600;
    }

    /* STATS ROW */
    .stats-row {
      display: grid; grid-template-columns: repeat(4,1fr);
      border-top: 1px solid rgba(201,168,76,0.15);
      border-bottom: 1px solid rgba(201,168,76,0.15);
      margin: 0 5%;
    }
    .stat-item {
      padding: 40px 5%;
      border-right: 1px solid rgba(201,168,76,0.15);
    }
    .stat-item:last-child { border-right: none; }
    .stat-number {
      font-family: 'Playfair Display', serif;
      font-size: 2.5rem; color: var(--gold);
      font-weight: 700; line-height: 1;
      margin-bottom: 0.5rem;
    }
    .stat-label { font-size: 0.75rem; color: var(--gray); letter-spacing: 0.1em; }

    /* END-TO-END */
    .ete-section {
      padding: 120px 5%;
      background: var(--navy2);
    }
    .ete-grid {
      display: grid; grid-template-columns: 1fr 1fr; gap: 80px;
      align-items: center; margin-top: 60px;
    }
    .ete-img { width: 100%; aspect-ratio: 4/3; object-fit: cover; filter: brightness(0.7); }
    .ete-content {}
    .ete-badge {
      display: inline-block;
      background: rgba(201,168,76,0.1); border: 1px solid rgba(201,168,76,0.3);
      color: var(--gold); padding: 6px 16px;
      font-size: 0.7rem; letter-spacing: 0.2em; text-transform: uppercase;
      margin-bottom: 1.5rem;
    }
    .ete-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(1.8rem, 3vw, 2.8rem);
      color: var(--white); line-height: 1.2; margin-bottom: 1.5rem;
    }
    .ete-text {
      font-size: 0.95rem; color: rgba(245,240,232,0.65);
      line-height: 1.9; margin-bottom: 2rem;
    }
    .ete-points {
      list-style: none; display: flex; flex-direction: column; gap: 12px;
    }
    .ete-points li {
      display: flex; align-items: center; gap: 12px;
      font-size: 0.9rem; color: var(--cream);
    }
    .ete-points li::before {
      content: ''; width: 6px; height: 6px;
      background: var(--gold); flex-shrink: 0;
      transform: rotate(45deg);
    }

    /* WHY MAPLE STAR */
    .why-section {
      padding: 120px 5%;
    }
    .why-header {
      text-align: center; max-width: 700px; margin: 0 auto 80px;
    }
    .why-img-banner {
      width: 100%; height: 500px; object-fit: cover;
      object-position: center;
      filter: brightness(0.5) saturate(0.8);
      margin-bottom: 80px;
    }
    .why-desc {
      font-size: 1.1rem; color: rgba(245,240,232,0.7);
      line-height: 1.9; max-width: 700px; margin: 0 auto;
    }

    /* VALUES */
    .values-grid {
      display: grid; grid-template-columns: repeat(2, 1fr); gap: 2px;
      margin: 0 5% 120px;
    }
    .value-card {
      background: var(--navy2); padding: 60px 48px;
      position: relative; overflow: hidden;
      transition: background 0.3s;
    }
    .value-card:hover { background: var(--navy3); }
    .value-card::before {
      content: attr(data-num);
      position: absolute; right: 32px; top: 24px;
      font-family: 'Playfair Display', serif;
      font-size: 5rem; color: rgba(201,168,76,0.06);
      font-weight: 700; line-height: 1;
    }
    .value-icon {
      font-size: 1.5rem; margin-bottom: 1.5rem; color: var(--gold);
    }
    .value-title {
      font-family: 'Playfair Display', serif;
      font-size: 1.6rem; color: var(--white);
      margin-bottom: 1rem;
    }
    .value-text {
      font-size: 0.9rem; color: rgba(245,240,232,0.6); line-height: 1.8;
    }

    /* SERVICES */
    .services-section {
      padding: 0 5% 120px;
    }
    .services-header { margin-bottom: 60px; }
    .services-grid {
      display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px;
    }
    .service-card {
      background: var(--navy2); overflow: hidden;
      transition: transform 0.4s ease;
    }
    .service-card:hover { transform: translateY(-8px); }
    .service-img {
      width: 100%; height: 200px; object-fit: cover;
      filter: brightness(0.7) saturate(0.7);
      transition: filter 0.4s;
    }
    .service-card:hover .service-img { filter: brightness(0.9) saturate(1); }
    .service-body { padding: 28px; }
    .service-name {
      font-family: 'Playfair Display', serif;
      font-size: 1.1rem; color: var(--white); margin-bottom: 0.75rem;
    }
    .service-text {
      font-size: 0.82rem; color: var(--gray); line-height: 1.7;
    }
    .service-sub {
      margin-top: 12px; list-style: none;
      display: flex; flex-wrap: wrap; gap: 6px;
    }
    .service-sub li {
      font-size: 0.7rem; color: var(--gold);
      border: 1px solid rgba(201,168,76,0.3);
      padding: 3px 10px; letter-spacing: 0.08em;
    }

    /* ICT BANNER */
    .ict-banner {
      background: var(--navy3); padding: 80px 5%;
      display: grid; grid-template-columns: 1fr 3fr; gap: 60px;
      align-items: center;
      border-top: 1px solid rgba(201,168,76,0.15);
      border-bottom: 1px solid rgba(201,168,76,0.15);
    }
    .ict-label {
      font-family: 'Playfair Display', serif;
      font-size: 0.7rem; letter-spacing: 0.3em;
      color: var(--gold); text-transform: uppercase;
    }
    .ict-text {
      font-size: 1rem; color: rgba(245,240,232,0.65); line-height: 1.9;
    }

    /* FOOTER */
    footer {
      background: #030609;
      padding: 80px 5% 40px;
    }
    .footer-grid {
      display: grid; grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 60px; margin-bottom: 60px;
    }
    .footer-brand .name {
      font-family: 'Playfair Display', serif;
      font-size: 1.3rem; color: var(--gold); margin-bottom: 1rem;
    }
    .footer-brand p {
      font-size: 0.85rem; color: var(--gray); line-height: 1.8; max-width: 280px;
    }
    .footer-col-title {
      font-size: 0.65rem; letter-spacing: 0.25em; text-transform: uppercase;
      color: var(--gold); margin-bottom: 1.5rem;
    }
    .footer-col ul { list-style: none; display: flex; flex-direction: column; gap: 12px; }
    .footer-col ul a {
      font-size: 0.85rem; color: var(--gray); text-decoration: none;
      transition: color 0.3s;
    }
    .footer-col ul a:hover { color: var(--gold-light); }
    .footer-address { font-size: 0.85rem; color: var(--gray); line-height: 1.8; }
    .footer-bottom {
      border-top: 1px solid rgba(201,168,76,0.1);
      padding-top: 30px;
      display: flex; justify-content: space-between; align-items: center;
    }
    .footer-copy { font-size: 0.75rem; color: rgba(138,155,189,0.5); }

    /* SCROLLBAR */
    ::-webkit-scrollbar { width: 4px; }
    ::-webkit-scrollbar-track { background: var(--navy); }
    ::-webkit-scrollbar-thumb { background: var(--gold-dim); }

    @media (max-width: 900px) {
      .about-section, .ete-grid { grid-template-columns: 1fr; }
      .stats-row { grid-template-columns: repeat(2,1fr); }
      .services-grid { grid-template-columns: 1fr 1fr; }
      .footer-grid { grid-template-columns: 1fr 1fr; }
      .values-grid { grid-template-columns: 1fr; }
      .ict-banner { grid-template-columns: 1fr; }
      .nav-links, .nav-cta { display: none; }
    }
  </style>
</head>
