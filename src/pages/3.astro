  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,300;0,400;0,600;0,700;0,800;1,700&family=Barlow:wght@300;400;500&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    :root {
      --red: #CC1B1B;
      --red2: #E52222;
      --dark: #111111;
      --charcoal: #1C1C1C;
      --mid: #2E2E2E;
      --gray: #6B6B6B;
      --light: #F0EEE9;
      --white: #FFFFFF;
    }
    html { scroll-behavior: smooth; }
    body { background: var(--white); color: var(--dark); font-family: 'Barlow', sans-serif; overflow-x: hidden; }

    /* NAV */
    nav {
      position: fixed; top: 0; z-index: 100;
      width: 100%;
      display: flex; align-items: stretch;
      height: 68px;
      background: var(--dark);
    }
    .nav-logo-block {
      background: var(--red); display: flex; align-items: center;
      padding: 0 32px;
    }
    .nav-logo-block .name {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 1.1rem; font-weight: 700;
      color: white; letter-spacing: 0.08em; text-transform: uppercase;
    }
    .nav-logo-block .sub {
      font-size: 0.58rem; color: rgba(255,255,255,0.65);
      letter-spacing: 0.2em; text-transform: uppercase; display: block;
    }
    .nav-right {
      flex: 1; display: flex; align-items: center;
      justify-content: flex-end; padding: 0 40px; gap: 40px;
    }
    .nav-right a {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.85rem; font-weight: 600;
      letter-spacing: 0.15em; text-transform: uppercase;
      color: rgba(255,255,255,0.6); text-decoration: none;
      transition: color 0.2s;
    }
    .nav-right a:hover { color: white; }
    .nav-cta {
      background: var(--red); color: white;
      padding: 0 24px; display: flex; align-items: center;
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.8rem; font-weight: 700;
      letter-spacing: 0.2em; text-transform: uppercase;
      text-decoration: none; transition: background 0.2s;
      align-self: stretch;
    }
    .nav-cta:hover { background: var(--red2); }

    /* HERO */
    .hero {
      position: relative; height: 100vh;
      background: var(--dark); overflow: hidden;
    }
    .c-track { display: flex; height: 100%; transition: transform 0.7s cubic-bezier(0.76,0,0.24,1); }
    .slide { min-width: 100%; position: relative; }
    .slide-img {
      width: 100%; height: 100%; object-fit: cover;
      filter: brightness(0.3) saturate(0.5);
    }
    /* Red stripe accent */
    .red-stripe {
      position: absolute; top: 0; bottom: 0; left: 0;
      width: 6px; background: var(--red); z-index: 3;
    }
    .slide-box {
      position: absolute; z-index: 2; bottom: 0; left: 0; right: 0;
      padding: 0 8% 8%;
    }
    .slide-tag {
      display: inline-block;
      background: var(--red); color: white;
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.7rem; font-weight: 700;
      letter-spacing: 0.25em; text-transform: uppercase;
      padding: 4px 14px; margin-bottom: 1.5rem;
    }
    .slide-h1 {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: clamp(3.5rem, 8vw, 8rem); font-weight: 800;
      line-height: 0.9; text-transform: uppercase;
      color: white; margin-bottom: 1.5rem;
    }
    .slide-h1 em { color: var(--red); font-style: normal; }
    .slide-sub {
      font-size: 1rem; color: rgba(255,255,255,0.55);
      line-height: 1.7; max-width: 560px; margin-bottom: 2.5rem;
    }
    .slide-link {
      display: inline-flex; align-items: center; gap: 12px;
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.8rem; font-weight: 700; letter-spacing: 0.25em;
      text-transform: uppercase; color: white;
      text-decoration: none; border-bottom: 1px solid var(--red);
      padding-bottom: 4px; transition: color 0.2s;
    }
    .slide-link:hover { color: var(--red); }

    /* Slide number */
    .slide-num-overlay {
      position: absolute; top: 50%; right: 8%;
      transform: translateY(-50%);
      z-index: 2;
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 12rem; font-weight: 800;
      color: rgba(255,255,255,0.04); line-height: 1;
      pointer-events: none;
    }

    /* Carousel controls */
    .c-controls {
      position: absolute; top: 50%; right: 3%;
      transform: translateY(-50%); z-index: 3;
      display: flex; flex-direction: column; gap: 6px;
    }
    .c-dot {
      width: 3px; height: 32px;
      background: rgba(255,255,255,0.2); cursor: pointer;
      transition: all 0.3s;
    }
    .c-dot.active { background: var(--red); height: 56px; }
    .c-progress {
      position: absolute; bottom: 0; left: 0; right: 0;
      height: 2px; background: rgba(255,255,255,0.1);
    }
    .c-bar { height: 100%; background: var(--red); width: 0; transition: width 5s linear; }

    /* ABOUT */
    .about { padding-top: 68px; }
    .about-hero-img {
      width: 100%; height: 60vh; object-fit: cover;
      filter: saturate(0.7);
      display: block;
    }
    .about-copy {
      padding: 80px 8%;
      display: grid; grid-template-columns: 1fr 1fr; gap: 80px;
    }
    .big-label {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.7rem; font-weight: 700;
      letter-spacing: 0.35em; text-transform: uppercase;
      color: var(--red); margin-bottom: 1.5rem;
    }
    .h2 {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: clamp(2rem, 4vw, 3.5rem); font-weight: 800;
      text-transform: uppercase; line-height: 1; color: var(--dark);
      margin-bottom: 1.5rem;
    }
    .h2 em { color: var(--red); font-style: normal; }
    .body-text { font-size: 0.95rem; color: var(--gray); line-height: 1.85; margin-bottom: 1rem; }

    /* METRICS */
    .metrics {
      background: var(--dark);
      display: grid; grid-template-columns: repeat(4,1fr);
    }
    .m-item {
      padding: 48px 40px;
      border-right: 1px solid rgba(255,255,255,0.07);
      position: relative; overflow: hidden;
    }
    .m-item:last-child { border-right: none; }
    .m-item::after {
      content: ''; position: absolute; left: 0; top: 0; bottom: 0;
      width: 0; background: var(--red);
      transition: width 0.4s ease; z-index: 0;
    }
    .m-item:hover::after { width: 4px; }
    .m-num {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 3rem; font-weight: 800; color: white;
      line-height: 1; position: relative; z-index: 1;
    }
    .m-label { font-size: 0.78rem; color: rgba(255,255,255,0.4); margin-top: 6px; position: relative; z-index: 1; letter-spacing: 0.1em; }

    /* ETE */
    .ete {
      padding: 80px 8%;
      background: var(--light);
    }
    .ete-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center; margin-top: 48px; }
    .ete-img { width: 100%; aspect-ratio: 16/10; object-fit: cover; }
    .feature-list { margin-top: 24px; list-style: none; display: flex; flex-direction: column; gap: 12px; }
    .feature-list li {
      display: flex; align-items: flex-start; gap: 14px;
      font-size: 0.9rem; color: var(--mid);
    }
    .f-num {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.65rem; font-weight: 700;
      background: var(--red); color: white;
      min-width: 22px; height: 22px;
      display: flex; align-items: center; justify-content: center;
      margin-top: 1px; flex-shrink: 0;
    }

    /* ICT */
    .ict-block {
      background: var(--charcoal); padding: 64px 8%;
      display: grid; grid-template-columns: 200px 1fr; gap: 60px; align-items: center;
    }
    .ict-title {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 2rem; font-weight: 800; text-transform: uppercase;
      color: var(--red); line-height: 1;
    }
    .ict-body { font-size: 0.95rem; color: rgba(255,255,255,0.55); line-height: 1.9; }

    /* WHY */
    .why { padding: 80px 8%; }
    .why-split { display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center; margin-top: 48px; }
    .why-img { width: 100%; aspect-ratio: 4/3; object-fit: cover; }
    .why-text .body-text { margin-bottom: 2rem; }

    /* VALUES */
    .vals {
      background: var(--dark); padding: 80px 8%;
      display: grid; grid-template-columns: repeat(4,1fr); gap: 0;
    }
    .val-item {
      padding: 40px;
      border-right: 1px solid rgba(255,255,255,0.07);
    }
    .val-item:last-child { border-right: none; }
    .val-head {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 1.5rem; font-weight: 800; text-transform: uppercase;
      color: white; margin-bottom: 1rem;
    }
    .val-text { font-size: 0.85rem; color: rgba(255,255,255,0.45); line-height: 1.8; }
    .val-icon { font-size: 1.8rem; margin-bottom: 1rem; }

    /* SERVICES */
    .services { padding: 80px 8%; }
    .services-h { margin-bottom: 48px; }
    .s-grid { display: grid; grid-template-columns: repeat(3,1fr); gap: 2px; }
    .s-card {
      position: relative; overflow: hidden;
      background: var(--light);
    }
    .s-img { width: 100%; height: 220px; object-fit: cover; display: block; filter: saturate(0.7); transition: filter 0.4s, transform 0.4s; }
    .s-card:hover .s-img { filter: saturate(1); transform: scale(1.04); }
    .s-body { padding: 24px; }
    .s-num {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.65rem; font-weight: 700; letter-spacing: 0.2em;
      color: var(--red); margin-bottom: 6px;
    }
    .s-name {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 1.2rem; font-weight: 800; text-transform: uppercase;
      color: var(--dark); margin-bottom: 8px;
    }
    .s-desc { font-size: 0.82rem; color: var(--gray); line-height: 1.7; }
    .s-tags { margin-top: 10px; display: flex; flex-wrap: wrap; gap: 4px; }
    .s-tag {
      font-size: 0.67rem; background: white;
      border: 1px solid #E0DDD8;
      color: var(--gray); padding: 2px 8px;
    }

    /* FOOTER */
    footer {
      background: #0A0A0A;
      padding: 72px 8% 40px;
    }
    .f-grid {
      display: grid; grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 60px; margin-bottom: 60px;
    }
    .f-brand {
      font-family: 'Barlow Condensed', sans-serif;
    }
    .f-brand .name { font-size: 1.2rem; font-weight: 800; text-transform: uppercase; color: white; margin-bottom: 1rem; }
    .f-brand .line { width: 40px; height: 3px; background: var(--red); margin-bottom: 1rem; }
    .f-brand p { font-size: 0.85rem; color: rgba(255,255,255,0.35); line-height: 1.8; }
    .f-col-t {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.65rem; font-weight: 700; letter-spacing: 0.25em;
      text-transform: uppercase; color: var(--red); margin-bottom: 1.5rem;
    }
    .f-links { list-style: none; display: flex; flex-direction: column; gap: 10px; }
    .f-links a { font-size: 0.85rem; color: rgba(255,255,255,0.35); text-decoration: none; transition: color 0.2s; }
    .f-links a:hover { color: white; }
    .f-addr { font-size: 0.85rem; color: rgba(255,255,255,0.35); line-height: 1.8; }
    .f-bottom {
      border-top: 1px solid rgba(255,255,255,0.06);
      padding-top: 28px; display: flex; justify-content: space-between;
      font-size: 0.75rem; color: rgba(255,255,255,0.2);
      font-family: 'Barlow Condensed', sans-serif; letter-spacing: 0.08em;
    }

    @media (max-width: 900px) {
      .about-copy, .ete-grid, .why-split { grid-template-columns: 1fr; }
      .metrics, .vals { grid-template-columns: repeat(2,1fr); }
      .s-grid { grid-template-columns: 1fr 1fr; }
      .f-grid { grid-template-columns: 1fr 1fr; }
      .ict-block { grid-template-columns: 1fr; }
      .nav-right a, .nav-cta { display: none; }
    }
  </style>
</head>
