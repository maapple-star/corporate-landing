      background: var(--white);
      border-bottom: 1px solid #E2E8F0;
      box-shadow: 0 1px 20px rgba(30,58,138,0.06);
    }
    .logo-wrap {
      display: flex; align-items: center; gap: 12px;
    }
    .logo-mark {
      width: 36px; height: 36px;
      background: var(--blue2); display: flex; align-items: center; justify-content: center;
    }
    .logo-mark span { color: white; font-family: 'Syne', sans-serif; font-weight: 800; font-size: 1rem; }
    .logo-text .name {
      font-family: 'Syne', sans-serif; font-weight: 700;
      font-size: 0.95rem; color: var(--dark); line-height: 1;
    }
    .logo-text .sub {
      font-size: 0.6rem; color: #94A3B8; letter-spacing: 0.15em; text-transform: uppercase;
    }
    .nav-menu { display: flex; align-items: center; gap: 2rem; }
    .nav-menu a {
      font-size: 0.85rem; font-weight: 500; color: var(--mid);
      text-decoration: none; transition: color 0.2s;
    }
    .nav-menu a:hover { color: var(--blue2); }
    .nav-btn {
      background: var(--blue2); color: white;
      padding: 10px 24px; font-family: 'DM Sans', sans-serif;
      font-size: 0.82rem; font-weight: 500; border: none;
      cursor: pointer; transition: background 0.2s; text-decoration: none;
    }
    .nav-btn:hover { background: var(--blue); }

    /* HERO */
    .hero {
      margin-top: 72px;
      position: relative; height: calc(100vh - 72px); overflow: hidden;
      background: var(--dark);
    }
    .carousel-wrap { display: flex; height: 100%; transition: transform 0.8s cubic-bezier(0.65,0,0.35,1); }
    .slide { min-width: 100%; position: relative; overflow: hidden; }
    .slide-img {
      width: 100%; height: 100%; object-fit: cover;
      filter: brightness(0.28) saturate(0.6);
    }
    /* Geometric overlay */
    .slide::after {
      content: '';
      position: absolute; inset: 0;
      background: linear-gradient(120deg, rgba(30,58,138,0.7) 0%, transparent 50%);
    }
    /* Diagonal accent */
    .slide-diagonal {
      position: absolute; top: 0; right: 0;
      width: 45%; height: 100%;
      background: var(--blue2);
      clip-path: polygon(30% 0%, 100% 0%, 100% 100%, 0% 100%);
      opacity: 0.12; z-index: 1;
    }
    .slide-content {
      position: absolute; top: 50%; left: 6%; transform: translateY(-50%);
      z-index: 2; max-width: 620px;
    }
    .slide-number {
      font-family: 'Syne', sans-serif; font-size: 0.7rem;
      color: var(--blue3); letter-spacing: 0.3em; margin-bottom: 2rem;
    }
    .slide-title {
      font-family: 'Syne', sans-serif;
      font-size: clamp(2.2rem, 4.5vw, 4rem); font-weight: 800;
      color: white; line-height: 1.05; margin-bottom: 1.5rem;
    }
    .slide-title .accent { color: var(--blue3); }
    .slide-text {
      font-size: 1rem; color: rgba(255,255,255,0.65);
      line-height: 1.8; max-width: 500px; margin-bottom: 2.5rem;
    }
    .btn-group { display: flex; gap: 16px; align-items: center; }
    .btn-primary {
      background: var(--blue2); color: white;
      padding: 14px 32px; font-family: 'DM Sans', sans-serif;
      font-size: 0.85rem; font-weight: 500;
      text-decoration: none; transition: all 0.2s;
    }
    .btn-primary:hover { background: var(--blue); }
    .btn-outline {
      border: 1px solid rgba(255,255,255,0.4); color: white;
      padding: 14px 32px; font-size: 0.85rem;
      text-decoration: none; transition: all 0.2s;
    }
    .btn-outline:hover { border-color: white; background: rgba(255,255,255,0.08); }

    /* Progress bar */
    .progress-bar {
      position: absolute; bottom: 0; left: 0; right: 0; height: 3px;
      background: rgba(255,255,255,0.1);
    }
    .progress-fill {
      height: 100%; background: var(--blue2);
      animation: progress 5s linear infinite;
    }
    @keyframes progress { from { width: 0% } to { width: 100% } }

    .slide-nav {
      position: absolute; bottom: 40px; left: 6%; z-index: 3;
      display: flex; gap: 8px;
    }
    .slide-dot {
      width: 8px; height: 8px; background: rgba(255,255,255,0.3);
      border-radius: 50%; cursor: pointer; transition: all 0.3s;
    }
    .slide-dot.active { background: white; transform: scale(1.3); }

    /* NUMBER BADGES */
    .hero-count {
      position: absolute; right: 6%; bottom: 40px; z-index: 3;
      display: flex; align-items: baseline; gap: 4px;
    }
