    .why-desc-box {
      max-width: 700px; margin: 0 auto 80px;
      text-align: center;
    }
    .why-desc-box p { font-size: 1rem; color: var(--mid); line-height: 1.9; }

    /* VALUES */
    .values-row {
      display: grid; grid-template-columns: repeat(4,1fr); gap: 24px;
      margin-bottom: 100px; padding: 0 6%;
    }
    .v-card {
      border-top: 3px solid var(--blue2); padding: 32px 24px;
      background: var(--off); transition: transform 0.3s, box-shadow 0.3s;
    }
    .v-card:hover { transform: translateY(-6px); box-shadow: 0 12px 40px rgba(30,58,138,0.1); }
    .v-icon { font-size: 1.5rem; margin-bottom: 1rem; }
    .v-title {
      font-family: 'Syne', sans-serif; font-size: 1.1rem;
      font-weight: 700; color: var(--dark); margin-bottom: 0.75rem;
    }
    .v-text { font-size: 0.85rem; color: var(--mid); line-height: 1.7; }

    /* SERVICES */
    .services-section { padding: 0 6% 100px; }
    .services-grid { display: grid; grid-template-columns: repeat(3,1fr); gap: 20px; }
    .svc-card { overflow: hidden; border: 1px solid #E2E8F0; transition: border-color 0.3s, box-shadow 0.3s; }
    .svc-card:hover { border-color: var(--blue3); box-shadow: 0 8px 30px rgba(59,130,246,0.1); }
    .svc-img { width: 100%; height: 180px; object-fit: cover; display: block; }
    .svc-body { padding: 24px; }
    .svc-name {
      font-family: 'Syne', sans-serif; font-size: 1rem;
      font-weight: 700; color: var(--dark); margin-bottom: 0.5rem;
    }
    .svc-text { font-size: 0.82rem; color: var(--mid); line-height: 1.7; }
    .svc-tags { margin-top: 12px; display: flex; flex-wrap: wrap; gap: 6px; }
    .svc-tag {
      background: var(--blue-pale); color: var(--blue2);
      font-size: 0.68rem; padding: 3px 10px;
      font-weight: 500;
    }

    /* FOOTER */
    footer { background: var(--dark); color: white; padding: 80px 6% 40px; }
    .footer-top {
      display: grid; grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 60px; margin-bottom: 60px;
    }
    .footer-logo .name {
      font-family: 'Syne', sans-serif; font-weight: 700;
      font-size: 1rem; color: white; margin-bottom: 1rem;
    }
    .footer-logo p { font-size: 0.85rem; color: #64748B; line-height: 1.8; }
    .f-col-title {
      font-size: 0.65rem; letter-spacing: 0.2em; text-transform: uppercase;
      color: var(--blue3); margin-bottom: 1.5rem;
    }
    .f-col ul { list-style: none; display: flex; flex-direction: column; gap: 12px; }
    .f-col ul a { font-size: 0.85rem; color: #64748B; text-decoration: none; transition: color 0.2s; }
    .f-col ul a:hover { color: white; }
    .f-address { font-size: 0.85rem; color: #64748B; line-height: 1.8; }
    .footer-bottom {
      border-top: 1px solid #1E293B; padding-top: 28px;
      display: flex; justify-content: space-between;
      font-size: 0.75rem; color: #334155;
    }

    @media (max-width: 900px) {
      .about-section, .ete-inner { grid-template-columns: 1fr; }
      .band { grid-template-columns: repeat(2,1fr); }
      .values-row { grid-template-columns: 1fr 1fr; }
      .services-grid { grid-template-columns: 1fr 1fr; }
      .footer-top { grid-template-columns: 1fr 1fr; }
      .ict-strip { flex-direction: column; }
      .nav-menu, .nav-btn { display: none; }
    }
  </style>
</head>
