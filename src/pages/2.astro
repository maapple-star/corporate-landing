    .section-h2 .blue { color: var(--blue2); }
    .section-p {
      font-size: 0.95rem; color: var(--mid); line-height: 1.9; margin-bottom: 1rem;
    }
    .about-right { position: relative; }
    .about-main-img {
      width: 100%; aspect-ratio: 1; object-fit: cover;
    }
    /* Floating stat cards */
    .stat-float {
      position: absolute; background: var(--blue2); color: white;
      padding: 16px 20px;
      box-shadow: 0 16px 40px rgba(29,78,216,0.35);
    }
    .stat-float.tl { top: -20px; left: -20px; }
    .stat-float.br { bottom: -20px; right: -20px; }
    .stat-float .num { font-family: 'Syne', sans-serif; font-size: 2rem; font-weight: 800; }
    .stat-float .lbl { font-size: 0.7rem; opacity: 0.8; letter-spacing: 0.08em; }

    /* DIVIDER BAND */
    .band {
      background: var(--blue);
      padding: 60px 6%;
      display: grid; grid-template-columns: repeat(4,1fr); gap: 0;
    }
    .band-item {
      padding: 0 32px;
      border-right: 1px solid rgba(255,255,255,0.15);
    }
    .band-item:last-child { border-right: none; }
    .band-num {
      font-family: 'Syne', sans-serif; font-size: 2.5rem; font-weight: 800;
      color: white; line-height: 1;
    }
    .band-lbl { font-size: 0.8rem; color: rgba(255,255,255,0.6); margin-top: 6px; }

    /* ETE SECTION */
    .ete-section {
      padding: 100px 6%;
      background: var(--off);
    }
    .ete-inner {
      display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center;
    }
    .ete-img { width: 100%; aspect-ratio: 16/10; object-fit: cover; }
    .check-list { list-style: none; margin-top: 24px; display: flex; flex-direction: column; gap: 14px; }
    .check-list li {
      display: flex; gap: 12px; align-items: flex-start;
      font-size: 0.9rem; color: var(--mid);
    }
    .check-list li::before {
      content: '‚úì'; width: 20px; height: 20px;
      background: var(--blue2); color: white;
      display: flex; align-items: center; justify-content: center;
      font-size: 0.7rem; flex-shrink: 0; margin-top: 2px;
    }

    /* ICT INFO */
