    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    :root {
      --blue: #1E3A8A;
      --blue2: #1D4ED8;
      --blue3: #3B82F6;
      --blue-light: #EFF6FF;
      --blue-pale: #DBEAFE;
      --dark: #0F172A;
